<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="60dp"
            android:src="@drawable/bank"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/social_reason"
                style="@style/headTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:enabled="true"
                android:maxLines="2"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:textColor="@color/black_semi_transparent"
                android:lineSpacingExtra="15dp"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/figure"
                style="@style/bodyCard"
                android:layout_below="@+id/social_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ic_laptop_black_24dp"
                android:drawableTint="@color/black_semi_transparent"
                android:textColor="@color/black_semi_transparent"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/emails"
                style="@style/bodyCard"
                android:layout_below="@+id/figure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:drawablePadding="4dp"
                android:autoLink="email"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableTint="@color/black_semi_transparent"
                android:textColor="@color/black_semi_transparent"
                android:textSize="16sp"

                android:paddingRight="8dp"/>


            <TextView
                android:id="@+id/federal_entity"
                style="@style/bodyCard"
                android:layout_below="@+id/emails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
                android:drawableTint="@color/black_semi_transparent"
                android:textColor="@color/black_semi_transparent"
                android:textSize="16sp"
                android:paddingRight="8dp"/>




        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
