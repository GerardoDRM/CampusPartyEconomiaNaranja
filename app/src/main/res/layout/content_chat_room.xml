<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_chat_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.campusparty.android.economianaranja.ChatRoom"
    tools:showIn="@layout/activity_chat_room">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout">

        <TextView
            android:id="@+id/t1"
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            android:textColor="@android:color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:text="Hola"/>


        <TextView
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_below="@+id/t1"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimaryDark"
            android:text="Hola como estas?"
            />



    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textView"
            android:hint="Mensaje"
            android:layout_weight="2.84" />

        <ImageView
            android:layout_weight="0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_send_black_24dp"/>


    </LinearLayout>

</RelativeLayout>
